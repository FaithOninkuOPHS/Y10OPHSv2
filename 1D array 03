names = []
end = True
names.append(input("Enter name1 >>>"))
names.append(input("Enter name2 >>>"))
names.append(input("Enter name3 >>>"))
names2 = input("Do you want to add another ?, yes or no").upper()

while end == True:
  if names2 == "NO":
    print(names)
    
  else:
    name = (input("Please enter another name or type no to discontinue >>>> ")).lower()

  if name == "no":
    end = False
    print(names)

  else:
    names.append(name)
